<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:autoText="false"
        android:background="#BAB7B7"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="60sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/CE_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="CE"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/seven_btn"
            app:layout_constraintEnd_toStartOf="@+id/C_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/zero_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dot_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/nag_btn"
            app:layout_constraintTop_toBottomOf="@+id/two_btn" />

        <Button
            android:id="@+id/nag_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/gray"
            android:onClick="onClick"
            android:text="+/-"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/zero_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one_btn" />

        <Button
            android:id="@+id/result_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/gray"
            android:onClick="onClick"
            android:text="="
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dot_btn"
            app:layout_constraintTop_toBottomOf="@+id/add_btn" />

        <Button
            android:id="@+id/dot_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="."
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/result_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/zero_btn"
            app:layout_constraintTop_toBottomOf="@+id/three_btn" />

        <Button
            android:id="@+id/three_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="3"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/dot_btn"
            app:layout_constraintEnd_toStartOf="@+id/add_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/two_btn"
            app:layout_constraintTop_toBottomOf="@+id/six_btn" />

        <Button
            android:id="@+id/one_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="1"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/nag_btn"
            app:layout_constraintEnd_toStartOf="@+id/two_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four_btn" />

        <Button
            android:id="@+id/two_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="2"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/zero_btn"
            app:layout_constraintEnd_toStartOf="@+id/three_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/one_btn"
            app:layout_constraintTop_toBottomOf="@+id/five_btn" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/result_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/three_btn"
            app:layout_constraintTop_toBottomOf="@+id/sub_btn" />

        <Button
            android:id="@+id/six_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="6"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/three_btn"
            app:layout_constraintEnd_toStartOf="@+id/sub_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/five_btn"
            app:layout_constraintTop_toBottomOf="@+id/nine_btn" />

        <Button
            android:id="@+id/four_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="4"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/one_btn"
            app:layout_constraintEnd_toStartOf="@+id/five_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven_btn" />

        <Button
            android:id="@+id/five_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="5"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/two_btn"
            app:layout_constraintEnd_toStartOf="@+id/six_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/four_btn"
            app:layout_constraintTop_toBottomOf="@+id/eight_btn" />

        <Button
            android:id="@+id/sub_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/add_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/six_btn"
            app:layout_constraintTop_toBottomOf="@+id/mul_btn" />

        <Button
            android:id="@+id/eight_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="8"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/five_btn"
            app:layout_constraintEnd_toStartOf="@+id/nine_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/seven_btn"
            app:layout_constraintTop_toBottomOf="@+id/C_btn" />

        <Button
            android:id="@+id/mul_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="*"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/sub_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/nine_btn"
            app:layout_constraintTop_toBottomOf="@+id/devide_btn" />

        <Button
            android:id="@+id/nine_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="9"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/six_btn"
            app:layout_constraintEnd_toStartOf="@+id/mul_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/eight_btn"
            app:layout_constraintTop_toBottomOf="@+id/BS_btn" />

        <Button
            android:id="@+id/seven_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="onClick"
            android:text="7"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/four_btn"
            app:layout_constraintEnd_toStartOf="@+id/eight_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CE_btn" />

        <Button
            android:id="@+id/BS_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="BS"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/nine_btn"
            app:layout_constraintEnd_toStartOf="@+id/devide_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/C_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/devide_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="/"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/mul_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/BS_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/C_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#BAB7B7"
            android:onClick="onClick"
            android:text="C"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/eight_btn"
            app:layout_constraintEnd_toStartOf="@+id/BS_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/CE_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>